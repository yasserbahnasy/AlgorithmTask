<!DOCTYPE html>
<html>
    <head>
        <meta name="viewport" content="width=device-width,initial scale=1" />
        <title>@ViewBag.Title</title>

        <link href="~/content/bootstrap.min.css" rel="stylesheet" />
        <link href="~/content/style.css" rel="stylesheet" />
        <link href="~/content/FontAwesome.css" rel="stylesheet" />

        
    </head>
    <body>
        <!---NavBar-->
        <header>

            <nav class="navbar navbar-expand-md navbar-dark fixed-top bg-dark">
                <div class="container">
                    <div class="navbar-header">
                        <button class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar">
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                        <a href="/" class="navbar-brand">
                            <img class="logo-size" src="~/images/logo.png" />
                        </a>
                    </div>
                    <div id="navbar" class="navbar-collapse collapse">
                        <h3 class="nav navbar-nav navbar-left name">Company Name</h3>
                       
                        <!--Partial Login-->
                        @Html.Partial("_login")
                    </div>
                </div>
            </nav>
        </header>
        <main class="main">
            <div class="container">
                <div class="row" style="min-height: 400px;">
                    @RenderBody()
                </div>
            </div>
        </main>
        <!--Footer-->
        <footer class="navbar navbar-default myfooter">
            <div class="container">
                <div class="row">
                    
                    <div class="col-md-6">
                        <h3><i class="glyphicon glyphicon-envelope"></i> Contact Us</h3>
                        <ul>
                            <li>Phone Number : 020001111</li>
                        </ul>
                    </div>

                    <div class="col-md-6 Socialmedia">
                        <h3><i class="glyphicon glyphicon-globe"></i> Social media Pages</h3>
                            <a href=""><i class="fab fa-facebook-square"></i></a>
                            <a href=""><i class="fab fa-twitter-square"></i></a>
                            <a href=""><i class="fab fa-instagram"></i></a>
                    </div>
                </div>
            </div>
            <div class="subfooter">
                <p>Copyright © 2020 </p>
            </div>
        </footer>

        <script src="~/scripts/jquery.min.js"></script>
        <script src="~/scripts/bootstrap.min.js"></script>
        <script src="~/Scripts/MyScript.js"></script>
    </body>
</html>
